{
  "agents": {
    "defaults": {
      "model": {
        "primary": "anthropic/claude-sonnet-4-5-20250929"
      },
      "workspace": "/home/app/openclaw-workspace",
      "bootstrapMaxChars": 20000,
      "sandbox": {
        "mode": "off"
      }
    }
  },
  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "0.0.0.0",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    }
  },
  "browser": {
    "enabled": true,
    "defaultProfile": "job-browser",
    "headless": false,
    "profiles": {
      "job-browser": {
        "cdpUrl": "http://127.0.0.1:9222",
        "color": "#4A90D9"
      }
    }
  },
  "channels": {
    "whatsapp": {
      "enabled": {{WHATSAPP_ENABLED}},
      "dmPolicy": "allowlist",
      "allowFrom": ["${WHATSAPP_ALLOW_FROM}"],
      "ackReaction": {
        "emoji": "\ud83d\udc40",
        "direct": true
      },
      "textChunkLimit": 4000,
      "mediaMaxMb": 10
    }
  },
  "plugins": {
    "enabled": true,
    "load": {
      "paths": ["/home/app/job-apply/plugin"]
    }
  },
  "hooks": {
    "enabled": true
  }
}
